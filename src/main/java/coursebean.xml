<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="coursebean_1" class="com.ga.learning.springmvc.Course" init-method="init" destroy-method="destroy"  >
		<property name="courseId" value="C001"></property>
		<property name="courseName" value="Java8"></property>
		<property name="department" value="Java"></property>
		<!-- <constructor-arg ref="bookbean_1"></constructor-arg> -->
		<property name="book" ref="bookbean_1"></property>
	</bean>
	
	<bean id="coursebean_2" class="com.ga.learning.springmvc.Course" init-method="init" destroy-method="destroy">
		<property name="courseId" value="C002"></property>
		<property name="courseName" value="Spring Mvc"></property>
		<property name="department" value="Java"></property>
		<!-- <constructor-arg ref="bookbean_2"></constructor-arg> -->
		<property name="book" ref="bookbean_2"></property>
	</bean>
	
		
	<bean id="coursebean_3" class="com.ga.learning.springmvc.Course" init-method="init" destroy-method="destroy">
		<property name="courseId" value="C003"></property>
		<property name="courseName" value="Spring Boot"></property>
		<property name="department" value="Java"></property>
		<!-- <constructor-arg ref="bookbean_3"></constructor-arg> -->
		<property name="book" ref="bookbean_3"></property>
	</bean>
	
	<bean id="bookbean_1" class="com.ga.learning.springmvc.Book" init-method="init" destroy-method="destroy">
		<property name="bookId" value="book_2"></property>
		<property name="bookName" value="Java In Action"></property>
	</bean>
	
	<bean id="bookbean_2" class="com.ga.learning.springmvc.Book" init-method="init" destroy-method="destroy">
		<property name="bookId" value="book_1"></property>
		<property name="bookName" value="Spring MVC In Action"></property>
	</bean>
	
	<bean id="bookbean_3" class="com.ga.learning.springmvc.Book" init-method="init" destroy-method="destroy">
		<property name="bookId" value="book_3"></property>
		<property name="bookName" value="Spring Boot In Action"></property>
	</bean>
	
	
</beans>