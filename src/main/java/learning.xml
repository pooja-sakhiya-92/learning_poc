<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="learningService"
		class="com.ga.learning.service.LearningService">
		<property name="name" value="Pooja"></property>
		<property name="role" value="Java Developer"></property>
	</bean>

	<bean id="hijackAroundMethodBean"
		class="com.ga.learning.service.HijackAroundMethod" />

	<bean id="hijackBeforeMethodBean"
		class="com.ga.learning.service.HijackBeforeMethod" />
	<bean id="hijackAfterMethodBean"
		class="com.ga.learning.service.HijackAfterMethod" />
	<bean id="learningServiceProxy"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="learningService"></property>
		<property name="interceptorNames">
			<list>
				<value>hijackBeforeMethodBean</value>
				<value>hijackAfterMethodBean</value>
				<value>hijackAroundMethodBean</value>
			</list>
		</property>
	</bean>

</beans>